<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SelectionCommittee.Views.InfoPage"  BackgroundColor="White">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="10">
                <Label Text="ОСНОВНЫЕ СВЕДЕНИЯ" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="Black" FontSize="22"/>
                <Label  Text="Автономная некоммерческая организация дополнительного профессионального образования «Оренбургская бизнес-школа»" FontAttributes="Bold" TextColor="Black" FontSize="16"/>
                <Label  LineBreakMode="WordWrap">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Дата создания: " TextColor="Black" FontAttributes="Bold" FontSize="16" />
                            <Span Text="19 апреля 2010 года." FontSize="16" TextColor="Black"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label  LineBreakMode="CharacterWrap">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Учредитель: " TextColor="Black" FontAttributes="Bold" FontSize="16" />
                            <Span Text="Белов Игорь Петрович "  TextColor="Black" FontAttributes="Italic" FontSize="16"/>
